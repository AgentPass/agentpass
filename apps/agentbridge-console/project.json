{
  "name": "@agentbridge/console",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "agentbridge-console/src",
  "projectType": "application",
  "tags": ["typescript-cd", "scope:agentbridge", "spa"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/agentbridge-console",
        "command": "vite build"
      },
      "dependsOn": ["@agentbridge/api:build", "@agentbridge/be:prisma-generate-format", "prebuild"]
    },
    "// why prebuild?": {
      "reason": "cause `vite build` doesn't type check and @nx/vite:build don't output proper styles"
    },
    "prebuild": {
      "executor": "@nx/vite:build",
      "options": {
        "outputPath": "{workspaceRoot}/dist/apps/agentbridge-console"
      },
      "dependsOn": ["@agentbridge/api:build", "@agentbridge/be:prisma-generate-format"]
    },
    "shadcn": {
      "executor": "nx:run-commands",
      "options": {
        "command": "scripts/shadcn-wrapper.sh",
        "cwd": "apps/agentbridge-console"
      },
      "inputs": ["default"],
      "description": "Run shadcn cli. i.e `nx shadcn @agentbridge/console --args=\"add button dialog\"`"
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "passWithNoTests": true
      }
    }
  }
}
