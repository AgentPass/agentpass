ENV=dev
IS_LOCAL=true

# PostgreSQL Configuration
POSTGRES_USER=agentbridge
POSTGRES_PASSWORD=agentbridge_password
POSTGRES_HOST=localhost
POSTGRES_DB=agentbridge
POSTGRES_PORT=5432

# Prisma database URL (for local development)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Server Configuration
PORT=3333

# JWT Configuration
JWT_EXPIRES_IN=14d

# Transport configuration
TRANSPORT_HEARTBEAT_INTERVAL=30000

# Logging
LOG_LEVEL=info

# Override when running locally, when serverId is not set from hostname
LOCAL_SERVER_ID=cm9fkjx5e0001ma0q76oaar0c

AWS_SECRETS_REGION=us-east-2

CONSOLE_URL=http://localhost:4200

OWNID_ADMIN_APP_ID=
OWNID_ADMIN_ENV=dev
OWNID_ADMIN_SHARED_SECRET=

OWNID_ENDUSER_APP_ID=
OWNID_ENDUSER_ENV=dev
OWNID_ENDUSER_SHARED_SECRET=

# AI Provider API Keys
# OpenAI
OPENAI_API_KEY=sk-ant-your-openai-api-key

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# AI Configuration (Optional)
# Default provider: openai or anthropic
AI_DEFAULT_PROVIDER=openai

# Rate limiting for AI endpoints (requests per minute)
AI_RATE_LIMIT_PER_MINUTE=20

# Maximum tokens for AI responses
AI_MAX_TOKENS=4096

# Default temperature for AI models (0-2)
AI_DEFAULT_TEMPERATURE=0.7
